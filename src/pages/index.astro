---
import Layout from "../layouts/Layout.astro"
import Main from "../components/layout/Main.vue"
import Sidebar from "../components/UI/Sidebar.vue"
import Anchor from "../components/UI/Anchor.vue"
import Button from "../components/UI/Button.vue"
import Card from "../components/UI/Card.vue"
import Dropdown from "../components/UI/Dropdown.vue"
import Input from "../components/UI/Input.vue"
import Select from "../components/UI/Select.vue"
import Switch from "../components/UI/Switch.vue"
---

<Layout>
  <div class="w-full grow flex relative">
    <Sidebar client:only/>
    <div class=" w-full h-fit flex justify-center">
      <Main client:load loading={false} customClass="gap-8">
        <div>
          <span class="text-2xl text-black!">Style Guide</span>
        </div>

        <!-- ANCHOR -->
        <div class="flex flex-col">
          <span>Anchor</span>
          <Anchor href="/">Link</Anchor>
        </div>

        <!-- BUTTON -->
        <div class="flex flex-col w-fit">
          <span>Button</span>
          <Button>Button</Button>
        </div>

        <!-- CARD -->
         <div class="flex flex-col w-fit">
          <span>Card</span>
          <Card>Card</Card>
         </div>

         <!-- DROPDOWN -->
        <div class="flex flex-col w-fit">
          <span>Dropdown</span>
          <Dropdown client:only items={['hello', 'world']}/>
        </div>

        <!-- INPUT -->
        <div class="flex-flex-col w-fit">
          <span>Input</span>
          <Input prefixIcon="ph ph-user" label="Input" placeholder="Enter Input"/>
        </div>

        <!-- LOADER -->
        <div class="flex flex-col w-fit">
          <span>Loader</span>
          <i class="text-zinc-600 animate-spin ph ph-spinner text-4xl flex items-center justify-center"></i>
        </div>

        <!-- SELECT -->
        <div class="flex flex-col w-fit">
          <span>Select</span>
          <Select options={[{ label: 'Option', value: 'value' }]} label="Select" placeholder="Select..."/>
        </div>

        <!-- SWITCH -->
        <div class="flex flex-col w-fit">
          <span>Switch</span>
          <Switch modelValue={true}/>
        </div>
      </Main>
    </div>
  </div>
</Layout>

<style scoped>
@reference "../styles/global.css";
span {
  @apply text-zinc-500;
}
</style>